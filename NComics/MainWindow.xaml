<Window x:Class="NComics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" KeyDown="WindowKeyDown">
    <Grid>
        <Menu IsMainMenu="True" Margin="0,0,0,287">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Click="NewClick"></MenuItem>    
            </MenuItem>
        </Menu>
        <Border DockPanel.Dock="Top">
            <Image Margin="10, 30, 10, 10" Name="CurrentImage"/>
        </Border>
        
    </Grid>
</Window>
