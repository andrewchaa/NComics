<Window x:Class="NComics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="672.388" Width="993.657" KeyDown="WindowKeyDown">
    <Grid>
        <Menu IsMainMenu="True" Margin="0,0,0,564" VerticalAlignment="Top" >
            <MenuItem Header="_File">
                <MenuItem Header="Open _Folder" Click="OpenFolder"></MenuItem>
            </MenuItem>
        </Menu>
        <Border DockPanel.Dock="Top">
            <Image Margin="10, 30, 10, 10" Name="CurrentImage"/>
        </Border>
        <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button MinWidth="100" Click="GoPrevious">Previous</Button>
            <Button MinWidth="100" Click="GoNext" Margin="10, 0, 0, 0">Next</Button>
        </StackPanel>

    </Grid>
</Window>
